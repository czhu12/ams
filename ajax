	 )},
	function(resp){
		console.log(resp);
	}
);

Credit Purchase
$.post(
	'/api/store_purchase/credit',
	{arr:JSON.stringify(
		[{upc:1000, quantity:1}, {upc:1003, quantity:3} ]
	 ), 
	credit:JSON.stringify({cardnum:123456, expirydate:'2012-01-03'})},
	function(resp){
		console.log(resp);
	}
);

Online Purchase
