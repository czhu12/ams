Search
$.get(
	'/api/search',
	{leadsinger:'no', title:'test', category:'rock'},
	function(resp){
		console.log(resp);
	}
);

Price
$.get(
	'/api/price',
	{arr:JSON.stringify([{upc:1000, quantity:1},{upc:1001, quantity:2}])},
	function(resp){
		console.log(resp);
	}
);

Registration
$.post(
	'/api/registration',
	{customer:JSON.stringify(
		{cid:'adf', password:'adf', name:'adf', address:'adf', phone:'adf'})
	},
	function(resp){
		console.log(resp);
	}
);

Cash Purchase
